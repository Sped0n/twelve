{
  "name": "twelve",
  "version": "v0.0.1",
  "description": "twelve theme source file",
  "packageManager": "pnpm@8.10.2",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "lint": "eslint . --fix && prettier --write .",
    "lint:check": "eslint . && prettier . --check",
    "dev": "run-p rollup:dev hugo:dev postcss:watch",
    "build": "rm -f ./static/bundled/js/* && run-s rollup:build postcss:build hugo:build",
    "server": "run-p rollup:server hugo:server postcss:watch",
    "rollup:build": "rollup -c --environment BUILD:production",
    "rollup:server": "rollup -c --watch --environment BUILD:production",
    "rollup:dev": "rollup -c --watch --environment BUILD:development",
    "hugo:build": "hugo --logLevel info --source=exampleSite --gc",
    "hugo:preview": "hugo --logLevel info --source=exampleSite -D --gc",
    "hugo:dev": "hugo server --source=exampleSite --gc -D --disableFastRender --watch --logLevel info",
    "hugo:server": "hugo server --source=exampleSite --gc --disableFastRender -e production --watch --logLevel info",
    "postcss:build": "postcss ./assets/css/style.css -o ./static/bundled/css/style.min.css",
    "postcss:watch": "pnpm run postcss:build --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sped0n/twelve.git"
  },
  "keywords": [
    "hugo",
    "theme",
    "typescript",
    "sass"
  ],
  "author": "spedon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sped0n/twelve/issues"
  },
  "homepage": "https://github.com/Sped0n/twelve#readme",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@tailwindcss/typography": "^0.5.10",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "cssnano-preset-advanced": "^6.0.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-nested": "^6.0.1",
    "prettier": "3.0.3",
    "prettier-plugin-go-template": "^0.0.15",
    "prettier-plugin-organize-imports": "^3.2.4",
    "rollup": "^4.3.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2"
  }
}
